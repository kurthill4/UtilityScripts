  registry_cache_docker_io:
    image: registry:3
    container_name: registry_cache_docker_io
    ports:
      - "5000:5000"
    volumes:
      - registry_cache_data:/var/lib/registry
    environment:
      - REGISTRY_PROXY_REMOTEURL=https://registry-1.docker.io

